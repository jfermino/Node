<p>Detalhe do produto</p>
{{#each listProdutos}}
<div id="dispForm">
     <div>
        ID:{{id}}
    </div>
    <div>
        Nome: {{name}}
    </div>
    <div>
        Descrição: {{description}}
    </div>
    <div>
        Preço: {{price}}
    </div>
    <div style="margin-top: 10px">
        <input type="button" id="btnEditar" value="Editar">
    </div>
</div>
<div id="editForm">
<form method="POST" action="/atualizar">
    <input type="hidden" name="id" value="{{id}}">
    <div>
        ID:{{id}}
    </div>
    <div>
        Nome: <input type="text" name="nome" value="{{name}}">
    </div>
    <div>
        Descrição: <input type="text" name="desc" value="{{description}}">
    </div>
    <div>
        Preço: <input type="text" name="preco" value="{{price}}">
    </div>
    <div style="margin-top: 10px">
        <input type="submit" id="btnAtualizar" value="Salvar">
    </div>
</form>

</div>

{{/each}}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#editForm").hide();

        $("#btnEditar").click(function(e){
            $("#dispForm").hide();
            $("#editForm").show();
        });
        $(".btnAtualizar").click(function (e) {
            var id = parseInt(e.target.dataset.id);
            atulizarRegistro(id);
        });
    });


    function atulizarRegistro(_id) {
        $.get("/atualizar", { id: _id });
    }
</script>